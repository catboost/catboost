#!/bin/sh -e

rev=375507
output_dir="libcxx-r$rev"

svn checkout --depth=files --non-interactive https://llvm.org/svn/llvm-project/libcxx/trunk@$rev "$output_dir"
cd "$output_dir"

svn update --revision=$rev include src
svn update --set-depth=exclude --revision=$rev CMakeLists.txt TODO.TXT .arcconfig .gitignore src/CMakeLists.txt include/CMakeLists.txt appveyor.yml appveyor-reqs-install.cmd
rm -rf .svn
